<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.zsmb.materialdrawerktexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DrawerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DrawerActivity"
            android:theme="@style/MaterialDrawerTheme.Light.DarkToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompactHeaderDrawerActivity"
            android:label="@string/drawer_item_compact_header"
            android:theme="@style/CustomTheme" />
        <activity
            android:name=".ActionBarActivity"
            android:label="@string/drawer_item_action_bar_drawer"
            android:theme="@style/MaterialDrawerTheme.ActionBar" />
        <activity
            android:name=".MultiDrawerActivity"
            android:label="@string/drawer_item_multi_drawer"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus" />
        <activity
            android:name=".NonTranslucentDrawerActivity"
            android:label="@string/drawer_item_non_translucent_status_drawer"
            android:theme="@style/MaterialDrawerTheme" />
        <activity
            android:name=".AdvancedDrawerActivity"
            android:label="@string/drawer_item_advanced_drawer"
            android:theme="@style/MaterialDrawerTheme.TranslucentStatus" />
        <activity
            android:name=".EmbeddedDrawerActivity"
            android:label="@string/drawer_item_embedded_drawer"
            android:theme="@style/MaterialDrawerTheme" />
        <activity
            android:name=".FullscreenDrawerActivity"
            android:label="@string/drawer_item_fullscreen_drawer"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>